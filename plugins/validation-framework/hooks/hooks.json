{
  "description": "Validation framework hooks for automatic retry loop and validation context injection",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/pre-tool-validation-context.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/stop-validation-loop.sh",
            "timeout": 30,
            "withTranscript": true
          }
        ]
      }
    ]
  }
}
